{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "lib": ["dom", "es2018", "es2017", "esnext.asynciterable"],
    "sourceMap": true,
    "outDir": "./public",
    "moduleResolution": "node",
    "declaration": false,
    "typeRoots": ["./src/@types/swapi-node/"],

    "composite": false,
    "removeComments": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "rootDir": "src"
  },
  "include": ["./src/**/*"],
  "exclude": ["src/vendor/**/*"]
}
